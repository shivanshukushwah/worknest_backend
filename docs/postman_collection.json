{
  "info": {
    "_postman_id": "twilio-verify-otp",
    "name": "Twilio Verify OTP System",
    "description": "Production-ready OTP authentication using Twilio Verify",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Register & Send OTP",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Register successful', function() {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Response contains userId', function() {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('userId');",
              "});",
              "",
              "pm.test('OTP NOT in response', function() {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.not.have.property('otp');",
              "});",
              "",
              "// Save userId for next requests",
              "var jsonData = pm.response.json();",
              "pm.environment.set('userId', jsonData.userId);"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test_{{$timestamp}}@example.com\",\n  \"password\": \"Test@123456\",\n  \"confirmPassword\": \"Test@123456\",\n  \"role\": \"student\",\n  \"phone\": \"+919876543210\",\n  \"location\": {\n    \"city\": \"Mumbai\",\n    \"state\": \"Maharashtra\",\n    \"country\": \"India\"\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/register",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "register"]
        }
      }
    },
    {
      "name": "2. Verify OTP",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('OTP verification successful', function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response contains JWT token', function() {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('token');",
              "});",
              "",
              "pm.test('User verified', function() {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.user.isPhoneVerified).to.equal(true);",
              "});",
              "",
              "// Save JWT token for authenticated requests",
              "var jsonData = pm.response.json();",
              "pm.environment.set('jwt_token', jsonData.token);"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"+919876543210\",\n  \"otp\": \"123456\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/verify-otp",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "verify-otp"]
        }
      }
    },
    {
      "name": "3. Resend OTP",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Resend OTP successful', function() {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response message is correct', function() {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.message).to.include('OTP sent');",
              "});",
              "",
              "pm.test('OTP NOT in response', function() {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.not.have.property('otp');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"+919876543210\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/resend-otp",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "resend-otp"]
        }
      }
    },
    {
      "name": "4. Register - Employer",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Employer registration successful', function() {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Response contains userId', function() {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('userId');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Business Owner\",\n  \"email\": \"employer_{{$timestamp}}@example.com\",\n  \"password\": \"Test@123456\",\n  \"confirmPassword\": \"Test@123456\",\n  \"role\": \"employer\",\n  \"phone\": \"+919876543211\",\n  \"businessName\": \"Tech Solutions Pvt Ltd\",\n  \"businessType\": \"service\",\n  \"businessLocation\": \"123 Business Street, Mumbai\",\n  \"businessCity\": \"Mumbai\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/register",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "register"]
        }
      }
    },
    {
      "name": "5. Error Test - Invalid OTP",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Invalid OTP returns 400', function() {",
              "    pm.response.to.have.status(400);",
              "});",
              "",
              "pm.test('Error message is meaningful', function() {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.message).to.be.a('string');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"+919876543210\",\n  \"otp\": \"000000\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/verify-otp",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "verify-otp"]
        }
      }
    },
    {
      "name": "6. Error Test - Invalid Phone Format",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Invalid phone format returns 400', function() {",
              "    pm.response.to.have.status(400);",
              "});",
              "",
              "pm.test('Error message mentions phone format', function() {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.message.toLowerCase()).to.include('phone');"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"Test@123456\",\n  \"confirmPassword\": \"Test@123456\",\n  \"role\": \"student\",\n  \"phone\": \"919876543210\",\n  \"location\": {\n    \"city\": \"Mumbai\",\n    \"state\": \"Maharashtra\",\n    \"country\": \"India\"\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/register",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "register"]
        }
      }
    },
    {
      "name": "7. Error Test - Resend Too Soon",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Resend within cooldown returns 429', function() {",
              "    pm.response.to.have.status(429);",
              "});",
              "",
              "pm.test('Error message mentions wait time', function() {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.message.toLowerCase()).to.include('wait');"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phone\": \"+919876543210\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/resend-otp",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "resend-otp"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "",
      "type": "string"
    }
  ]
}
